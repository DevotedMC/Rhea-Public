mysql:
  user: '{{ shard.name }}'
  password: '{{ mysql_passwords [shard.name]}}'
  host: '{{ mysql_host }}'
  database: '{{ shard.name }}'
  port: '{{ mysql_port }}'
  prefix: ''
  poolsize: 10
  connectionTimeout: 10000
  idleTimout: 600000
  maxLifetime: 7200000
  savesPerDay: 64
commonSettings:
  cancelReinforcementModeInBastionField: false
  listBastionTimeout: 2000
  cancelPlacementAndDamage:
    - SCAFFOLDING
bastions:
#The first bastion in this list will be used as the default type
#This only really matters the first time your start it up when converting from old bastion
#All bastions in the db will be flagged as, in this instance, citybastion
  basic:
    block:
      material: ENDER_CHEST
      name: Bastion
      lore: 
        - This bastion will protect you from grief,
        - Protects only the block and above where it is placed,
        - Takes ~10 mins of placing to break.
    squarefield: true
    effectRadius: 0
    includeY: true
    startScaleFactor: 10
    finalScaleFactor: {{ shard.bastion }}
    warmupTime: 172800000
    erosionPerDay: 0
    regenPerDay: 5
    blocksToErode: 1
    placementCooldown: 500
    destroyOnRemove: true
    onlyDirectDestroy: false
    blockReinforcements: true
    destroyOnRemoveWhileImmature: true #doesn't matter anyway if destroyOnRemove=true
    proximityDamageRange: 0
    proximityDamageFactor: 0
    overlay_name: Ba
    pearls:
      block: true
      blockMidair: false
      scaleFactor: 1
      requireMaturity: true
      consumeOnBlock: false
      damageFirstBastion: true
      allowPearlingOut: true
    elytra:
      block: true
      scaleFactor: 0.25
      requireMaturity: true
      destroyOnBlock: false
      damageOnBlock: true
      explodeOnBlock: true
      explodeOnBlockStrength: 0
